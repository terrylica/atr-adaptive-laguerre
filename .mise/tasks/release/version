#!/usr/bin/env bash
#MISE description="Phase 2 of 4: Execute semantic-release to analyze conventional commits, determine version bump, update CHANGELOG.md, create git tag, and publish GitHub release."
#MISE depends=["release:preflight"]
set -euo pipefail

echo "═══════════════════════════════════════════════════════════"
echo "  Phase 2: VERSION (semantic-release)"
echo "═══════════════════════════════════════════════════════════"

# Run semantic-release (uses .releaserc.yml config)
/usr/bin/env bash -c 'GITHUB_TOKEN="${GH_TOKEN}" semantic-release --no-ci'

echo ""
echo "✓ Version phase complete"
echo ""
